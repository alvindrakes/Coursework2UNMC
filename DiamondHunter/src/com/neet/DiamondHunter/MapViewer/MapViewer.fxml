<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane fx:id="mapPane" prefHeight="800.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/9" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.neet.DiamondHunter.MapViewer.MapController">
   <children>
      <BorderPane prefHeight="800.0" prefWidth="600.0">
         <top>
            <StackPane fx:id="mapStack" prefHeight="640.0" prefWidth="640.0" BorderPane.alignment="CENTER">
               <children>
                  <Canvas fx:id="mapCanvas" height="640.0" width="640.0" />
               </children>
            </StackPane>
         </top>
         <bottom>
            <HBox prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
               <children>
                  <TextField alignment="TOP_LEFT" prefHeight="143.0" prefWidth="242.0" style="-fx-border-color: #29323C29323C; -fx-border-width: 2;">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </TextField>
                  <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
                     <children>
                        <HBox prefHeight="100.0" prefWidth="200.0">
                           <children>
                              <Button fx:id="playButton" mnemonicParsing="false" onAction="#playGame" prefHeight="40.0" prefWidth="100.0" text="Play" />
                              <Button fx:id="exitButton" mnemonicParsing="false" onAction="#exitGame" prefHeight="40.0" prefWidth="100.0" text="Exit" />
                           </children>
                        </HBox>
                        <Text fill="#212121" strokeType="OUTSIDE" strokeWidth="0.0" text="Current Coordination" />
                        <TextField alignment="BOTTOM_CENTER" style="-fx-border-width: 2; -fx-border-color: #29323C29323C #29323C29323C;" />
                     </children>
                  </VBox>
                  <VBox prefHeight="100.0" prefWidth="194.0">
                     <children>
                        <Text fill="#212121" strokeType="OUTSIDE" strokeWidth="0.0" text="BOAT coordination: " />
                        <Text fill="#212121" strokeType="OUTSIDE" strokeWidth="0.0" text="AXE coordination:" />
                        <HBox alignment="TOP_RIGHT" prefHeight="77.0" prefWidth="260.0" />
                     </children>
                  </VBox>
               </children>
            </HBox>
         </bottom>
      </BorderPane>
   </children>
</AnchorPane>
